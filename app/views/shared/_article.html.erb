
<div class="card text-center mb-3 mt-3", style="width: 70rem; height: 30rem;">
    <div class="card-body">
      <h5 class="card-title"><%= obj.title %></h5>
      <p class="card-text"><%= obj.description %></p>
      <% if show %>
        <%= link_to 'Show', article_path(obj.id), :class => "btn btn-primary" %>
      <% end %>
      <% if logged_in? %>
        <% if obj.user == current_user || current_user.admin > 1%>
          <%= link_to 'Edit', edit_article_path(obj.id), :class => "btn btn-primary" %>
          <%= link_to 'Delete',
          article_path(obj.id),
            method: :delete,
            data: {confirm: "Are you sure"},
            class: "btn btn-danger"
          %>
        <% end %>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <%=
        (Time.now - obj.created_at).to_i / 86400 %> days ago,
         By <%= link_to obj.user.username, user_path(obj.user)
      %>
    </div>
</div>
