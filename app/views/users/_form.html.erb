<%= render 'shared/errors', obj: @user %>
<div class="container" style="width: 50%">
      <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-info rounded", local: true) do |f| %>
        <div class="form-floating mb-3">
          <%= f.text_field :username, class: "form-control rounded-0", placeholder:"Enter some username" %>
          <%= f.label :username, for: "floatingInput", class:"form-label" %>
        </div>
        <div class="form-floating mb-3">
          <%=
            f.email_field :email,
            class:"form-control rounded-0",
            placeholder:"Some email",
            id:"email",
            style: "height: 100%"
          %>
          <%= f.label :email, for:"email" %>
        </div>
        <div class="form-floating mb-3">
          <%=
            f.password_field :password,
            class:"form-control rounded-0",
            placeholder:"Some Password",
            id:"password",
            style: "height: 100%"
          %>
          <%= f.label :password, for:"password" %>
        </div>
        <div class="text-center">
          <%= f.submit "Sign up", type:"submit" ,class:"btn btn-primary" %>
          <br/>
          <br/>
          <%= link_to 'Back to Index', articles_path, class: "btn btn-dark btn-sm" %>
        </div>
      <% end %>

</div>
